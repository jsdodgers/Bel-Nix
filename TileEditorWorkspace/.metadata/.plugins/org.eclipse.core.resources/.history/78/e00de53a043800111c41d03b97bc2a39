
public class Window
{
	private int speed;
	private int window;
	private int ticketsSold;
	private int timeIdle;
	private int timeWithCustomer;
	private Customer currentCustomer;
	
	public Window(int windowSpeed, int windowNumber) {
		speed = windowSpeed;
		ticketsSold = 0;
		timeIdle = 0;
		timeWithCustomer = 0;
		currentCustomer = null;
		window = windowNumber;
	}
	
	public int getSpeed() {
		return speed;
	}
	
	public int getTicketsSold() {
		return ticketsSold;
	}
	
	public void soldTicket() {
		ticketsSold++;
	}
	
	public void incrementIdle() {
		timeIdle++;
	}
	
	public int idleTime() {
		return timeIdle;
	}
	
	public void incrementTimeWithCustomer() {
		timeWithCustomer++;
		currentCustomer.oneSecWindow();
		if (timeWithCustomer == speed) {
			timeWithCustomer = 0;
			currentCustomer.setFinishedAtWindow();
			currentCustomer = null;
			soldTicket();
		}
	}
	
	public int getCustomerTime() {
		return timeWithCustomer;
	}
	
	public void setCustomer(Customer c) {
		currentCustomer = c;
	//	currentCustomer.setLine(window);
		currentCustomer.setReachedWindow();
	}
	
	public Customer getCustomer() {
		return currentCustomer;
	}
	
}
