import java.io.File;
import java.io.FileNotFoundException;
import java.util.ArrayList;
import java.util.Scanner;


public class Parser
{
	private String fileName;
	private String start;
	
	public Parser (String start2, String file) {
		fileName = file;
		start = start2;
	}
	
	public Grammar parse() throws FileNotFoundException{
		Scanner scanner = new Scanner(new File(fileName));
		ArrayList<Rule> gramm = new ArrayList<Rule>();
		while (scanner.hasNextLine()) {
			String next = scanner.nextLine();
			if (next.equals("{")) {
				String var = scanner.nextLine();
				String last = scanner.nextLine();
				ArrayList<RightHandSide> rule = new ArrayList<RightHandSide>();
				while (!last.equals("}")) {
					rule.add(new RightHandSide(createRightHandSide(last)));
					last = scanner.nextLine();
				}
				gramm.add(new Rule(var,rule));
			}
		}
		return new Grammar(start, gramm);
		
	}
	
	public ArrayList<Symbol> createRightHandSide(String symbols) {
		ArrayList<Symbol> rightHand = new ArrayList<Symbol>();
		Scanner scanner = new Scanner(symbols);
		while (scanner.hasNext()){ 
			String string = scanner.next();
			if (string.equals(";")) break;
			if (string.charAt(0)=='[' && string.charAt(string.length()-1)==']') {
				rightHand.add(new Variable(string.substring(1, string.length()-1)));
			}
			else {
				rightHand.add(new Terminal(string));
			}
		}
		return rightHand;
	}
}
